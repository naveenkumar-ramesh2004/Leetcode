//165. Compare Version Numbers
//https://leetcode.com/problems/compare-version-numbers/description/?envType=daily-question&envId=2025-09-23

class Solution {
    public int compareVersion(String version1, String version2) {
        String[] sv1=version1.split("\\.");
        String[] sv2=version2.split("\\.");
        int[] v1= new int[sv1.length];
        int[] v2= new int[sv2.length];
        int i=0;
        for(String val:sv1){
            v1[i++]=Integer.parseInt(val);
        }
        i=0;
        for(String val:sv2){
            v2[i++]=Integer.parseInt(val);
         
        }
        i=0;
        int j=0;
        while(i<v1.length && j<v2.length){
            if(v1[i]>v2[j]){
                return 1;
            }
            else if(v1[i]<v2[j]){
                return -1;
            }
            i++;
            j++;
        }
        while(i<v1.length){
            if(v1[i++]>0)
            {return 1;}
        }
        while(j<v2.length){
            if(v2[j++]>0){return -1;}
        }
        return 0;
    }
}
