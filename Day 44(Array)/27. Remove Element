//27. Remove Element
//https://leetcode.com/problems/largest-perimeter-triangle/?envType=daily-question&envId=2025-09-26

//Patter Name: In-Place/Two Pointer
/*
 Two pointer 
    -"slow" pointer k to replace the not equal val number in nums array
    -"fast" pointer i to iterate all the element in the array
 In-Place
    -Without create new arry to replace orginal array
*/

class Solution {
    public int removeElement(int[] nums, int val) {
        int k=0;
        for(int i=0;i<nums.length;i++){
            if(nums[i]!=val){
                nums[k++]=nums[i];
            }
        }
        return k;
        
    }
}
