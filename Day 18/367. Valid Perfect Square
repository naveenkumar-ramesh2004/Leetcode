//367. Valid Perfect Square
//https://leetcode.com/problems/valid-perfect-square/description/?envType=problem-list-v2&envId=binary-search



class Solution {
    public boolean isPerfectSquare(int num) {
        if(num==1)
        {return true;}
        for(int i=0;i<=num/2;i++){
            if(i*i==num){
                return true;
            }
            else if(i*i>num){
                break;
            }
        }
        return false;
        
    }
}
