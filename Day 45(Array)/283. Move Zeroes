//Optimize 
//  --without use another another array use k to put first non zero element and fill remaing elemnt zero
 
class Solution {
    public void moveZeroes(int[] nums) {
        int k=0;
        for(int i=0;i<nums.length;i++){
           if(nums[i]!=0){ nums[k++]=nums[i];}
        }
        while(k<nums.length){
            nums[k++]=0;
        }
    }
}
