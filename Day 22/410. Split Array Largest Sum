410. Split Array Largest Sum
https://leetcode.com/problems/split-array-largest-sum/description/

class Solution {
    public int splitArray(int[] nums, int k) {
        int start=0;
        int end=0;
        for(int num:nums){
            if(start<num){
                start=num;
            }
            end+=num;
        }
        while(start<end){
            int mid=start+end/2;
            int sum=0;
            int p=1;
            for(int num:nums){
                if(sum+num>mid){
                    sum=num;
                    p++;
                }
                else{
                    sum+=num;
                }
            }
            if(p>k){
                start=mid+2;

            }
            else{
                end=mid;
            }
        }
        return end;
    }
}
