public class Solution{
    public int[] intersect(int[] nums1, int[] nums2) {
        int[] temp = new int[1001];
        for(int num:nums1){
            temp[num]++;
        }
        int[] ans= new int[nums1.length];
        int i=0;
        for(int num:nums2){
            if(temp[num]>0){
                ans[i++]=num;
                temp[num]--;
            }
        }
        return Arrays.copyOfRange(ans,0,i);
    }
}
